@model IEnumerable<techwave.Models.Produto>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ImagemUrl)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <img src="@item.ImagemUrl" alt="@item.Nome" style="width:100px;height:100px;" />
            </td>
        </tr>
    }
    </tbody>
</table>
